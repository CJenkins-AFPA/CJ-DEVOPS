# Configuration Harbor pour TP24
hostname: harbor.local

# HTTP settings
http:
  port: 80

# HTTPS settings
https:
  port: 443
  certificate: /etc/harbor/ssl/harbor.crt
  private_key: /etc/harbor/ssl/harbor.key

# Harbor admin credentials
harbor_admin_password: Harbor12345

# Database
database:
  password: root123
  max_idle_conns: 100
  max_open_conns: 900

# Data storage
data_volume: /data

# Trivy scanner
trivy:
  ignore_unfixed: false
  skip_update: false
  insecure: false

# Jobservice
jobservice:
  max_job_workers: 10
  job_loggers:
    - STD_OUTPUT
    - FILE
  logger_sweeper_duration: 1

# Notification
notification:
  webhook_job_max_retry: 3
  webhook_job_http_client_timeout: 3

# Chart
chart:
  absolute_url: disabled

# Log
log:
  level: info
  local:
    rotate_count: 50
    rotate_size: 200M
    location: /var/log/harbor

_version: 2.11.0

# Proxy settings (optional)
proxy:
  http_proxy:
  https_proxy:
  no_proxy:
  components:
    - core
    - jobservice
    - trivy
