options {
    directory "/var/cache/bind";
    
    recursion yes;
    allow-recursion { 192.168.100.0/24; };
    allow-query { any; };
    
    forwarders {
        1.1.1.1;
        8.8.8.8;
    };
    
    dnssec-validation auto;
    listen-on port 53 { any; };
    listen-on-v6 { none; };
    
    version none;
    hostname none;
    server-id none;
};
